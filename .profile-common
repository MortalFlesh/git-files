#
# NVM (node)    // it is currently lazy-loaded by zsh
#
function loadNvm() {
    subTitle "Loading nvm (node) ..."
    export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
    [ -s "$M_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
    nvm use node
}

