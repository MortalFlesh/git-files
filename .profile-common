# http://stackoverflow.com/questions/16956810/finding-all-files-containing-a-text-string-on-linux
function findString() {
    # or: grep -lr "/.*Suave.*/" ./
    grep -rnw . -e "${1}"
}

# findFile /etc/ hosts
function findFile() {
    find "${1}" -type f -name "${2}"
}

