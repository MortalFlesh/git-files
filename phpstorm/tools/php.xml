      <option name="COMMAND" value="$USER_HOME$/.composer/vendor/symplify/easy-coding-standard/bin/ecs" />
      <option name="PARAMETERS" value="check -q --fix -- &quot;$FilePath$&quot;" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>